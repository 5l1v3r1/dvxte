FROM debian:jessie

# quick merge off:
# https://github.com/docker-library/ruby/blob/aba4590582d91d49926558ac27b9f005c7488bc9/2.3/slim/Dockerfile
# https://hub.docker.com/r/vulnerables/web-owasp-railsgoat/~/dockerfile/
#
# todo:
# verify
# minimize

ENV RUBY_MAJOR 2.3
ENV RUBY_VERSION 2.3.3
ENV RUBY_DOWNLOAD_SHA256 1a4fa8c2885734ba37b97ffdb4a19b8fba0e8982606db02d936e65bac07419dc
ENV RUBYGEMS_VERSION 2.6.10
ENV GEM_HOME /usr/local/bundle
ENV BUNDLE_PATH="$GEM_HOME" \
	BUNDLE_BIN="$GEM_HOME/bin" \
	BUNDLE_SILENCE_ROOT_WARNING=1 \
	BUNDLE_APP_CONFIG="$GEM_HOME"
ENV PATH $BUNDLE_BIN:$PATH
ENV BUNDLER_VERSION 1.14.5

RUN set -ex \
	\
&& buildDeps=' \
autoconf \
build-essential \
bison \
gcc \
git \
libbz2-dev \
		libgdbm-dev \
		libglib2.0-dev \
		libncurses-dev \
		libreadline-dev \
		libxml2-dev \
		libxslt-dev \
		make \
		ruby \
		wget \
		xz-utils \
	' \

RUN apt-get update && \
apt-get install -y --no-install-recommends \
$buildDeps \
bzip2 \
ca-certificates \
libffi-dev \
libgdbm3 \
libssl-dev \
libyaml-dev \
procps \
zlib1g-dev \
libpq-dev \
nodejs \
\

# skip installing gem documentation
RUN mkdir -p /usr/local/etc \
	&& { \
		echo 'install: --no-document'; \
		echo 'update: --no-document'; \
	} >> /usr/local/etc/gemrc

# some of ruby's build scripts are written in ruby
# we purge system ruby later to make sure our final image uses what we just built

	\
	&& wget -O ruby.tar.xz "https://cache.ruby-lang.org/pub/ruby/${RUBY_MAJOR%-rc}/ruby-$RUBY_VERSION.tar.xz" \
	&& echo "$RUBY_DOWNLOAD_SHA256 *ruby.tar.xz" | sha256sum -c - \
	\
	&& mkdir -p /usr/src/ruby \
	&& tar -xJf ruby.tar.xz -C /usr/src/ruby --strip-components=1 \
	&& rm ruby.tar.xz \
	\
	&& cd /usr/src/ruby \
	\
# hack in "ENABLE_PATH_CHECK" disabling to suppress:
#   warning: Insecure world writable dir
	&& { \
		echo '#define ENABLE_PATH_CHECK 0'; \
		echo; \
		cat file.c; \
	} > file.c.new \
	&& mv file.c.new file.c \
	\
&& autoconf \
	&& ./configure --disable-install-doc --enable-shared \
	&& make -j"$(nproc)" \
	&& make install \
	\
	&& cd / \
	\
	&& gem update --system "$RUBYGEMS_VERSION"



# Install and configure Railsgoat
RUN gem install bundler --version "$BUNDLER_VERSION"
# install things globally, for great justice
# and don't create ".bundle" in all our apps
RUN mkdir -p "$GEM_HOME" "$BUNDLE_BIN" \
&& chmod 777 "$GEM_HOME" "$BUNDLE_BIN"

RUN cd /tmp/ && \
git clone https://github.com/OWASP/railsgoat goat && \
mkdir /myapp && \
cp /tmp/goat/Gemfile /myapp/Gemfile && \
cp /tmp/goat/Gemfile.lock /myapp/Gemfile.lock && \
cd /myapp && \
bundle install && \
mv /tmp/goat/* . && \


# final cleanup
RUN apt-get clean && \
apt-get purge -y --auto-remove $buildDeps \
rm -rf /var/lib/apt/lists/* 
rm -r /usr/src/ruby \
rm -Rf /tmp/goat

EXPOSE 3000

CMD [ "irb" ]
